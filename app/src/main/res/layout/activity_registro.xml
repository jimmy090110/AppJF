<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegistroActivity"
    android:background="@color/rosa"
    >


    <androidx.cardview.widget.CardView

        android:id="@+id/card_view_registro"
        app:cardBackgroundColor="@color/black"

        android:layout_width="335dp"
        android:layout_height="471dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346"> <!--espacio extra de abajo-->

        <LinearLayout
            android:id="@+id/linearLayout_registro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/rosa">
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_nombre_registro"
                    style="@style/txtv_formularios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="633dp"
                    />

                <EditText
                    android:id="@+id/txt_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text="usuario"
                    android:textSize="@dimen/text_normal_size"

                    android:padding="@dimen/padding_eddit_ext"

                    android:drawableLeft="@drawable/icon_user1"
                    android:drawableTint="@color/white"

                    style="@style/editTextTheme"

                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_nombre_registro1"
                    style="@style/txtv_formularios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="633dp"
                    />

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text="@string/email"
                    android:textSize="@dimen/text_normal_size"

                    android:padding="@dimen/padding_eddit_ext"

                    android:drawableLeft="@drawable/icon_user1"
                    android:drawableTint="@color/white"

                    style="@style/editTextTheme"

                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv_nombre_registro12"
                    style="@style/txtv_formularios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="633dp"
                    />

                <EditText
                    android:id="@+id/txt_email3"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text="contrasenia"
                    android:textSize="@dimen/text_normal_size"

                    android:padding="@dimen/padding_eddit_ext"

                    android:drawableLeft="@drawable/icon_user1"
                    android:drawableTint="@color/white"

                    style="@style/editTextTheme"

                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"

                    />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>